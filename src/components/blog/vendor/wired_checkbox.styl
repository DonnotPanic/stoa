.contains-task-list
  list-style-type none
  margin-left -1.5rem
  font-family 'Gloria Hallelujah', cursive

.task-list-item
  padding-top 0 !important
  line-height 1.7em
  font-size 1.1rem
  color #795548
  background-image linear-gradient(120deg, transparent 0%, gray 6%, rgba(211, 211, 211, 0.4) 70%, transparent 80%)
  background-position 2em 1.4em
  background-size 100% 0.1rem
  background-repeat no-repeat

.contains-task-list li::before
  display none

.task-list-item>input[type='checkbox']
  margin-right 1em

.task-list-item>del
  text-decoration-thickness 0.11em
  text-decoration-style double
