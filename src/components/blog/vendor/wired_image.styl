.image-container {
    display: flex;
    height: 20rem;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

@media screen and (min-width: 60rem) {
    .image-container {
        height: 30rem;
    }
}

.image-container>img{
    height: 100%;
    object-fit: contain;
}

.blog-img {
    cursor: zoom-in;
    display: block;
    height: 92%;
    width: fit-content;
    margin: .5rem auto;
}

.image-legend {
    font-weight: bolder;
}

@media screen and (min-width: 60rem) {
    .blog-img {
        margin: 1rem auto;
    }
}