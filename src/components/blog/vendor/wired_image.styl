.image-container
  display flex
  justify-content center
  flex-direction column
  align-items center
  max-width 100%
  max-height 100%

.image-container>img
  height 100%
  object-fit contain

.blog-img
  cursor zoom-in
  display block
  height 90%
  width fit-content
  margin 0.5rem auto

.image-legend
  font-weight bolder

@media screen and (min-width: 60rem)
  .blog-img
    margin 1rem auto
