
@keyframes emphasis
  0%
    transform scale(1)
    rotate -0.025turn
  25%
    transform scale(1.2)
    rotate 0.025turn
  50%
    transform scale(1.35)
    rotate -0.0125turn
  75%
    transform scale(1.45)
    rotate 0.0125turn
  100%
    transform scale(1.5)
    rotate 0turn

.nav-bar
  display none
  height 2rem
  width 20rem
  top 0
  padding-right 5vw
  right 0

@media screen and (min-width: 40rem)
  .nav-bar
    font-size larger
    display inherit
    flex-direction row
    flex-wrap nowrap
    justify-content space-evenly
    align-items center

  .nav-bar > span
    display none
    flex-direction row
    flex-wrap nowrap
    justify-content space-evenly
    align-items center

  #homepage-link > span
  #blogs-link > span
    margin-left 0.2em
    opacity 1
    color black
    font-weight bold
    transition all 0.4s ease-out
  
  #homepage-link:hover > span
  #blogs-link:hover > span
    margin-left -1em
    opacity 0
    color grey
  
  #homepage-link > svg
  #blogs-link > svg
    color black

  #homepage-link:hover > svg
  #blogs-link:hover > svg
    animation-name: emphasis;
    animation-duration: 0.6s;
    animation-fill-mode: forwards;

