.intro-container {
    display: inline-block;
    margin-top: 5vh;
    padding-left: 3rem;
    padding-right: 3rem;
    font-family: "JetBrains Mono", monospace;
    text-align: left;
}

@media screen and (min-width: 60rem) {
    .intro-container {
        padding-left: 8rem;
        padding-right: 8rem;
    }
}

.intro-container > h1 {
    text-align: center;
    margin-bottom: 3rem;
}

.intro-container > h2 {
    text-indent: 2rem;
}

.intro-container > h3 {
    text-indent: 4rem;
}

.intro-container > p {
    text-indent: 2rem;
    hyphens: auto;
    word-break: normal;
    line-height: 150%;
}